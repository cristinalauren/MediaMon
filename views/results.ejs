<% if (isAuthenticated) { %>
  <div>
    <% if (keywordList.length > 0) { %>
      <p>
        <% keywordList.forEach(function (keyword) { %>
        <div class="btn keywordbtn">
          <a href="/search?keyword=<%= keyword.name %>"><%= keyword.name %></a>
        </div>
        <% }) %>
      <p>
    <% } %>
  </div>
<% } %>

